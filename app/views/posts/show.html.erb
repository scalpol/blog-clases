<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% @comments.each do |comment| %>
  <br>
  <strong><%= 'Comment:' %></strong>
  <%= comment.content %>
  <br>
  <%= "__________________" %>
  <br>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= form_with(model: [@post, Comment.new], local:true) do |f| %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit :enviar %>
<% end %>
